<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">

	<servlet>
		<servlet-name>Rivendell</servlet-name>
		<servlet-class>com.rivendellcity.RivendellServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Rivendell</servlet-name>
		<url-pattern>/rivendell</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>UserDB</servlet-name>
		<servlet-class>com.rivendellcity.server.servlet.UserServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UserDB</servlet-name>
		<url-pattern>/user</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>TripDB</servlet-name>
		<servlet-class>com.rivendellcity.server.servlet.TripServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>TripDB</servlet-name>
		<url-pattern>/trip</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	
</web-app>
